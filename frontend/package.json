{
  "name": "school-management-system",
  "version": "2.0.0",
  "private": true,
  "main": "electron/main.js",
  "dependencies": {
    "@babel/preset-react": "^7.18.6",
    "@chakra-ui/icons": "^2.0.19",
    "@chakra-ui/react": "2.6.1",
    "@chakra-ui/system": "2.5.7",
    "@chakra-ui/theme-tools": "^1.3.6",
    "@emotion/cache": "^11.12.0",
    "@emotion/react": "^11.12.0",
    "@emotion/styled": "^11.12.0",
    "@reduxjs/toolkit": "^2.10.1",
    "@tanstack/react-table": "^8.19.3",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "apexcharts": "3.50.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "framer-motion": "^11.3.7",
    "jspdf": "^2.5.2",
    "npm-force-resolutions": "^0.0.10",
    "react": "^18.2.0",
    "react-apexcharts": "1.4.1",
    "react-calendar": "^5.0.0",
    "react-custom-scrollbars-2": "^4.5.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-icons": "^5.2.1",
    "react-is": "^18.3.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.25.1",
    "stylis": "^4.3.2",
    "stylis-plugin-rtl": "^2.0.2",
    "web-vitals": "^4.2.2"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "preinstall": "npx npm-force-resolutions",
    "electron:dev": "cross-env BACKEND_PORT=59201 concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder --win --x64"
  },
  "resolutions": {
    "react-error-overlay": "6.0.9"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/plugin-transform-react-jsx": "^7.23.4",
    "@vitejs/plugin-react": "^4.2.1",
    "anymatch": "^3.1.3",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.9.1",
    "gh-pages": "^6.1.1",
    "wait-on": "^7.2.0",
    "micromatch": "^4.0.7",
    "vite": "^7.2.2",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
  ,
  "build": {
    "appId": "org.mindspire.academia.pro",
    "productName": "Academia Pro",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": ["**/*", "!**/.git/**"]
      }
    ],
    "win": {
      "target": ["nsis"],
      "artifactName": "academia-pro.exe"
    },
    "directories": {
      "buildResources": "public"
    }
  }
}
